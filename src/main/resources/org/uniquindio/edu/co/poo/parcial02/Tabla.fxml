<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorPrincipal" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uniquindio.edu.co.poo.parcial02.controller.Tablacontroller">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Encabezado -->
    <HBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
        <Label fx:id="lblTitulo" style="-fx-text-fill: #2c3e50;" text="Tabla de Inmuebles">
            <font>
                <Font name="System Bold" size="28" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Tabla de inmuebles -->
    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" text="Lista de Inmuebles">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTipo" prefWidth="120" text="Tipo" />
                <TableColumn fx:id="colCiudad" prefWidth="150" text="Ciudad" />
                <TableColumn fx:id="colHabitaciones" prefWidth="120" text="Habitaciones" />
                <TableColumn fx:id="colPisos" prefWidth="100" text="Pisos" />
                <TableColumn fx:id="colPrecio" prefWidth="120" text="Precio" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button mnemonicParsing="false" onAction="#onVolver" style="-fx-background-color: #32b41b; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Volver" textFill="WHITE">
                <HBox.margin>
                    <Insets right="80.0" />
                </HBox.margin>
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button fx:id="btnEliminar" onAction="#onEliminarProducto" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Eliminar Inmueble" />
        </HBox>
    </VBox>

</VBox>